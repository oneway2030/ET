<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_margin_space_20"
    android:paddingRight="@dimen/common_margin_space_20">

    <com.oneway.ui.widget.CommomHorizontalLayout
        android:id="@+id/item_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        app:left_text="开启"
        app:left_text_color="@color/white" />

    <com.oneway.ui.widget.CommomHorizontalLayout
        android:id="@+id/item_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        app:left_text="关闭"
        app:left_text_color="@color/white" />
</LinearLayout>