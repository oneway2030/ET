    <!--android:id="@+id/common_title_view_layout_divide"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1px"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="#e0e2e8"-->
    <!--android:visibility="gone" />-->

</RelativeLayout>

